{
    "name": "tms-backend",
    "version": "1.0.0",
    "description": "Training Management System Backend API",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc && npx prisma generate",
        "start": "npx prisma migrate deploy && npx prisma db seed && node dist/index.js",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate dev",
        "db:push": "prisma db push",
        "db:seed": "tsx prisma/seed.ts",
        "test": "jest",
        "test:unit": "jest --testPathPattern=unit",
        "test:integration": "jest --testPathPattern=integration",
        "lint": "eslint src --ext .ts"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.700.0",
        "@aws-sdk/client-ses": "^3.700.0",
        "@prisma/client": "^6.19.2",
        "@supabase/supabase-js": "^2.89.0",
        "aws-sdk": "^2.1692.0",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "csurf": "^1.11.0",
        "dotenv": "^16.6.1",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.0",
        "helmet": "^8.0.0",
        "ioredis": "^5.4.2",
        "jsonwebtoken": "^9.0.2",
        "kafkajs": "^2.2.4",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^3.0.3",
        "nodemailer": "^6.9.16",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "peerjs": "^1.5.4",
        "rate-limit-redis": "^4.2.0",
        "socket.io": "^4.8.1",
        "uuid": "^11.0.3",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/csurf": "^1.11.5",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.10.2",
        "@types/node-cron": "^3.0.11",
        "@types/nodemailer": "^6.4.17",
        "@types/passport": "^1.0.17",
        "@types/passport-jwt": "^4.0.1",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.18.1",
        "@typescript-eslint/parser": "^8.18.1",
        "eslint": "^9.17.0",
        "jest": "^29.7.0",
        "prisma": "^6.1.0",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
